{
    "meta": {
        "template": "Velzon",
        "version": "1.0.0",
        "description": "Style guide and design tokens for the Velzon Admin & Dashboard Template"
    },
    "colors": {
        "palette": {
            "primary": "#405189",
            "secondary": "#3577f1",
            "success": "#0ab39c",
            "info": "#299cdb",
            "warning": "#f7b84b",
            "danger": "#f06548",
            "dark": "#212529",
            "light": "#f3f6f9"
        },
        "variants": [
            "default",
            "soft",
            "outline",
            "gradient"
        ],
        "usage": {
            "text": "text-{color}",
            "background": "bg-{color}",
            "background_soft": "bg-soft-{color}",
            "border": "border-{color}"
        }
    },
    "typography": {
        "font_family": {
            "base": "'Poppins', sans-serif",
            "monospace": "'Monaco', 'Courier New', monospace"
        },
        "headings": {
            "h1": "2.5rem",
            "h2": "2rem",
            "h3": "1.75rem",
            "h4": "1.5rem",
            "h5": "1.25rem",
            "h6": "1rem"
        },
        "display": {
            "display-1": "6rem",
            "display-2": "5.5rem",
            "display-3": "4.5rem",
            "display-4": "3.5rem",
            "display-5": "3rem",
            "display-6": "2.5rem"
        },
        "font_weights": {
            "light": 300,
            "normal": 400,
            "medium": 500,
            "semibold": 600,
            "bold": 700
        },
        "utilities": {
            "alignment": [
                "text-start",
                "text-center",
                "text-end"
            ],
            "transform": [
                "text-lowercase",
                "text-uppercase",
                "text-capitalize"
            ],
            "decoration": [
                "text-decoration-none",
                "text-decoration-underline",
                "text-decoration-line-through"
            ]
        }
    },
    "spacing": {
        "base": "1rem (16px)",
        "scale": {
            "0": "0",
            "1": "0.25rem (4px)",
            "2": "0.5rem (8px)",
            "3": "1rem (16px)",
            "4": "1.5rem (24px)",
            "5": "3rem (48px)"
        },
        "utilities": {
            "margin": [
                "m-",
                "mt-",
                "mb-",
                "ms-",
                "me-",
                "mx-",
                "my-"
            ],
            "padding": [
                "p-",
                "pt-",
                "pb-",
                "ps-",
                "pe-",
                "px-",
                "py-"
            ],
            "gap": [
                "gap-"
            ]
        }
    },
    "grid": {
        "breakpoints": {
            "xs": "0",
            "sm": "576px",
            "md": "768px",
            "lg": "992px",
            "xl": "1200px",
            "xxl": "1400px"
        },
        "containers": [
            "container",
            "container-fluid",
            "container-{breakpoint}"
        ]
    },
    "components": {
        "buttons": {
            "classes": [
                "btn",
                "btn-{color}",
                "btn-outline-{color}",
                "btn-soft-{color}",
                "btn-ghost-{color}",
                "btn-gradient-{color}"
            ],
            "sizes": [
                "btn-sm",
                "btn-lg"
            ]
        },
        "badges": {
            "classes": [
                "badge",
                "bg-{color}",
                "badge-soft-{color}",
                "badge-outline-{color}"
            ]
        },
        "alerts": {
            "classes": [
                "alert",
                "alert-{color}",
                "alert-dismissible"
            ]
        },
        "cards": {
            "structure": [
                "card",
                "card-header",
                "card-body",
                "card-footer"
            ]
        }
    },
    "icons": {
        "libraries": [
            "Remix Icons (ri-*)",
            "BoxIcons (bx-*)",
            "Feather Icons (data-feather)",
            "LineAwesome (las la-*)",
            "Material Design Icons (material-icons)",
            "Crypto Icons (mdi mdi-*)"
        ]
    }
}